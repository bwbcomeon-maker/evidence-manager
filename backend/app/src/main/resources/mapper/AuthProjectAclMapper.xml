<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bwbcomeon.evidence.mapper.AuthProjectAclMapper">

    <resultMap id="BaseResultMap" type="com.bwbcomeon.evidence.entity.AuthProjectAcl">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="project_id" property="projectId" jdbcType="BIGINT"/>
        <result column="sys_user_id" property="sysUserId" jdbcType="BIGINT"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, project_id, sys_user_id, role, created_at
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_project_acl
        WHERE id = #{id}
    </select>

    <select id="selectByProjectId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_project_acl
        WHERE project_id = #{projectId}
        ORDER BY created_at DESC
    </select>

    <select id="selectByProjectIds" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_project_acl
        WHERE project_id IN
        <foreach collection="projectIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        ORDER BY project_id, created_at DESC
    </select>

    <select id="selectBySysUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_project_acl
        WHERE sys_user_id = #{sysUserId}
        ORDER BY created_at DESC
    </select>

    <select id="selectByProjectIdAndSysUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_project_acl
        WHERE project_id = #{projectId}
        AND sys_user_id = #{sysUserId}
    </select>

    <insert id="insert" parameterType="com.bwbcomeon.evidence.entity.AuthProjectAcl" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO auth_project_acl (project_id, sys_user_id, role, created_at)
        VALUES (
            #{projectId},
            #{sysUserId},
            #{role},
            COALESCE(#{createdAt}, CURRENT_TIMESTAMP)
        )
    </insert>

    <update id="update" parameterType="com.bwbcomeon.evidence.entity.AuthProjectAcl">
        UPDATE auth_project_acl
        <set>
            <if test="role != null">role = #{role},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM auth_project_acl
        WHERE id = #{id}
    </delete>

    <delete id="deleteByProjectIdAndSysUserId">
        DELETE FROM auth_project_acl
        WHERE project_id = #{projectId}
        AND sys_user_id = #{sysUserId}
    </delete>

</mapper>
